<h3><%=params[:id] %></h3>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th></th>
    <th>イベント</th>
  </tr>
  <% @events.each_with_index{ |event,index| %>
      <tr>
        <td><span class="badge"><%= index+1 %></span></td>
        <td>
          <%= link_to( event['title'], controller: 'events', action: 'show', id: event['event_id'] ) %>
        </td>
      </tr>
  <% } %>
</table>
