<p>
<% image_tag_out = image_tag( @item.user.profile_image_url, width: '48px', alt: @item.user.url_name, title: @item.user.url_name ) %>
<%=link_to( image_tag_out, controller: 'qiita/users', action: 'show', id: @item.user.url_name ) %>
</p>

<% @item.tags.each_with_index{ | tag, index | %>
  <p>
    <% image_tag_out = image_tag_completion_missing( tag['icon_url'], alt: tag['name'], title: tag['name'], page: 1 ) %>
    <%= link_to( image_tag_out, controller: 'qiita/tags', action: 'show', id: tag['name'] ) %>
  </p>
<% } %>

<div class="page-header">
  <h3>
    <%= @item.title %>
    <a class="btn btn-info" href="<%=@item.url %>"><%=image_tag( '/images/qiita_icon.ico', :size => '16x16' ) %><i class="icon-share-alt icon-white"></i>Qiitaで見る</a>
  </h3>
</div>
<%=raw @item.body %>
