<% event = @zusaar_event_list['event'].first %>
<%= event['title'] %><br/>
<%= event['accepted'] %>/<%= event['limit'] %><br/>

<% users = @zusaar_user_list['event'][0]['users'] %>
<table>
<% users.each_with_index{ |user,index| %>
  <tr>
    <td><%=(index+1) %></td>
    <td><%=link_to( user['nickname'], action: 'users', user_id: user['user_id']  ) %></td>
    <td><%=link_to( 'profile', user['profile_url'] ) %></td>
    <td><%=(user['status']=='1')? '出席':'キャンセル待ち' %></td>
  </tr>
<% } %>
</table>
