<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th></th>
    <th>タイトル</th>
    <th>開催日</th>
    <th>オーナー</th>
    <th>Popup</th>
  </tr>
  <% @events.each_with_index{|event,index| %>
      <tr>
        <td><%= @offset + index %></td>
        <td><%= link_to( event['title'][0..40], action: 'events', event_id: event['event_id'] ) %></td>
        <td><%= Time.parse(event['started_at']).strftime('%Y/%m/%d') %></td>
        <td><%= link_to( event['owner_nickname'], action: 'users', owner_id: event['owner_id'] ) %></td>
        <td><a href="#" role="button" rel="popover" class="btn popover-test"
               title="<%=event['title'] %>" data-content="<%=event['catch'] %>" data-placement="left">Popup</a></td>
      </tr>
  <% } %>
</table>

<ul class="pager">
  <li><%= link_to_if( (@page)>1, 'Prev', action: 'index', page: @page-1 ) %></li>
  <li><%= link_to( 'Next', action: 'index', page: @page+1 ) %></li>
</ul>
