<h3>
  <% event = @events.first %>
  <%=event['owner_nickname'] %>
</h3>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th></th>
    <th>イベント</th>
  </tr>
  <% @events.each_with_index{ |event,index| %>
      <tr>
        <td><span class="badge"><%= index+1 %></span></td>
        <td>
          <%= link_to( event['title'][0..40], :controller => 'atnd/events', action: 'show', id: Base64.encode64(event['event_id']) ) %>
        </td>
      </tr>
  <% } %>
</table>
