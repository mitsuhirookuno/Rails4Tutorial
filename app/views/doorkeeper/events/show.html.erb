<%=render_googlemap( @event['lat'], @event['long'] ) %>

<div class="page-header">
  <h3>
    <%= link_to_different_domain( @event['title'], @event['public_url'] ) %>
    <a class="btn btn-info" href="<%=@event['public_url'] %>">
      <%=image_tag( '/images/doorkeeper_icon.png', :size => '16x16' ) %>
      Doorkeeperで見る
      <i class="icon-share-alt icon-white"></i>
    </a>
  </h3>
</div>

<h4>
  <span class="label label-info">日時</span>
  <%=(Time.parse(@event['starts_at'])+9.hour).to_s(:long_jp) %>〜<%=(Time.parse(@event['ends_at'])+9.hour).to_s(:long_jp) %>
</h4>

<ul class="nav nav-tabs">
  <li class="active"><a href="#home" data-toggle="tab">詳細</a></li>
  <li><a href="#address" data-toggle="tab" onClick="load_only_once();">場所</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="home">
    <%=raw @event['description'] %>
  </div>
  <div class="tab-pane" id="address">
    <div id="map_canvas" style="width:500px; height:300px"></div>
  </div>
</div>